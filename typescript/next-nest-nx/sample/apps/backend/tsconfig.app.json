{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "outDir": "../../dist/backend",
    "baseUrl": "./",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "target": "es2021",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strictNullChecks": false
  },
  "exclude": [
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
